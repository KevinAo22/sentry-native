{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "sentry_example_cpp.exe Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/sentry_example_cpp.exe",
      "args": [
        "log",
        "enable-logs",
        "stdout",
        "terminate-handler",
        "veh-handler",
        "on-crash",
        // "crash-oom",
        // "crash-raise-exception",
        "crash-exception"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "externalTerminal"
    }
  ]
}
